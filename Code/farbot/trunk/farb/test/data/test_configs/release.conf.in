#
# Releases
#
<Releases>
	# Release Build Working Directory
	BuildRoot @BUILDROOT@

	# Net Install/NFS Directory 
	InstallRoot @BUILDROOT@

	# Host for NFS Server (Probably this machine)
	NFSHost	10.0.50.1

	<Release 6.0>
		# FreeBSD CVS Repository Mirror
		CVSRoot	@CVSROOT@
		# Release Tag
		CVSTag	@TAG1@
	</Release>

	<Release 6-STABLE>
		# FreeBSD CVS Repository Mirror
		CVSRoot	@CVSROOT@
		# Release Tag
		CVSTag	@TAG2@
	</Release>
</Releases>

#
# Partition Maps
#
<Partitions>
	<PartitionMap Standard>
		<Partition 1>
			Mount		/
			Size		512MB
			Type		ufs
			SoftUpdates	no
		</Partition>

		<Partition 2>
			Size		4GB
			Type		swap
			SoftUpdates	@SWAPSU@
		</Partition>

		<Partition 3>
			Mount		/var
			Size		10GB
			Type		ufs
		</Partition>

		<Partition 4>
			Mount		/tmp
			Size		1GB
			Type		ufs
		</Partition>

		<Partition 5>
			# All remaining space
			Mount		/usr
			Size		0GB
			Type		ufs
		</Partition>
	</PartitionMap>
</Partitions>

#
# Package Sets
#
<PackageSets>
	<PackageSet Base>
		<Package>
			Port            security/sudo 
		</Package>
	</PackageSet>
	<PackageSet Database>
		<Package>
			Port            databases/mysql50-server
			<BuildOptions>
				WITH_COLLATION  latin1_general_ci
			</BuildOptions>
		</Package>
	</PackageSet>
</PackageSets>

#
# Installations
#
<Installations>
	<Installation Test>
		Release		6.0
		PackageSet	@PSET@
		PackageSet	Database
		NetworkDevice	em0
		<Disk ad0>
			PartitionMap @PMAP@
		</Disk>
                <PostInstall>
                        Command /dist/local/cleanup.sh everything    
                        Command /dist/local/local.sh database
                </PostInstall>
	</Installation>
</Installations>

<Logging>
	<logfile>
		# Log debug messages to stdout
		Level debug
		Path STDOUT
	</logfile>
</Logging>
